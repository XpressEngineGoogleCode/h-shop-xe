<query id="getProductImage" action="select">
	<tables>
		<table name="product_image" />
	</tables>
	<columns>
		<column name="*" />
	</columns>
	<conditions>
        <condition operation="like" column="document_srl" var="document_srl" filter="number" />
        <condition operation="like" column="image_srl" var="image_srl" filter="number" />
	</conditions>
    <navigation>
        <index var="sort_index" default="at_index" order="asc" />
    </navigation>
</query>

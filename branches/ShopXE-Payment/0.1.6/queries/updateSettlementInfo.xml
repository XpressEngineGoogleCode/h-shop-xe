<query id="updateSettlementInfo" action="update">
    <tables>
        <table name="payment_settlement" />
    </tables>
    <columns>
		<column name="current_state" var="current_state" />

		<column name="buyer_name" var="buyer_name" />
		<column name="buyer_call" var="buyer_call" />
		<column name="buyer_mail" var="buyer_mail" />
		<column name="buyer_addr" var="buyer_addr" />
		<column name="buy_code" var="buy_code" />
		<column name="buy_info" var="buy_info" />
		<column name="buy_amount" var="buy_amount" />
		<column name="call_type" var="call_type" />

		<column name="result_code" var="result_code" />
		<column name="result_message" var="result_message" />

		<column name="system_srl" var="system_srl" />
		<column name="transtate" var="transtate" />

		<column name="finance_name" var="finance_name" />
		<column name="finance_description" var="finance_description" />
		<column name="finance_message" var="finance_message" />

		<column name="pay_date" var="pay_date" />
    </columns>
	<conditions>
       <condition operation="equal" column="order_srl" var="order_srl"/>
	</conditions>
</query>
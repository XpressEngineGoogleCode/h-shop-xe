<query id="updatePurchaseState" action="update">
    <tables>
        <table name="shopxe_purchase" />
    </tables>
    <columns>
		<column name="step" var="step" />
		<column name="payment_call" var="payment_type" />
	</columns>
	<conditions>
       <condition operation="equal" column="purchase_srl" var="purchase_srl" filter="number" notnull="notnull" />
	</conditions>
</query>

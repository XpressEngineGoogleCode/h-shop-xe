<query id="updatePaymentInfo" action="update">
    <tables>
        <table name="payment_system" />
    </tables>
    <columns>
		<column name="current_extra" var="current_extra" />
		<column name="description" var="description" />
		<column name="extra_1" var="extra_1" />
		<column name="extra_2" var="extra_2" />
		<column name="extra_3" var="extra_3" />
		<column name="extra_4" var="extra_4" />
		<column name="extra_5" var="extra_5" />
		<column name="is_test" var="is_test" />
		<column name="use_type" var="use_type" />
    </columns>
   <conditions>
       <condition operation="equal" column="module_srl" var="module_srl"/>
	</conditions>
</query>
<query id="updatePurchase" action="update">
    <tables>
        <table name="shopxe_purchase" />
    </tables>
    <columns>
		<column name="order_code" var="order_code" />
		<column name="step" var="step" />
		<column name="member_srl" var="member_srl" />
		<column name="password" var="password" />
		<column name="order_amount" var="order_amount" />
		<column name="discount_amount" var="discount_amount" />
		<column name="delivery_amount" var="delivery_amount" />
		<column name="payment_amount" var="payment_amount" />
		<column name="o_user_name" var="o_user_name" />
		<column name="o_phone" var="o_phone" />
		<column name="o_cellular" var="o_cellular" />
		<column name="o_mail_id" var="o_mail_id" />
		<column name="o_mail_host" var="o_mail_host" />
		<column name="r_user_name" var="r_user_name" />
		<column name="r_phone" var="r_phone" />
		<column name="r_cellular" var="r_cellular" />
		<column name="r_mail_id" var="r_mail_id" />
		<column name="r_mail_host" var="r_mail_host" />
		<column name="r_addr" var="r_addr" />
		<column name="r_addr_1" var="r_addr_1" />
		<column name="remark" var="remark" />
		<column name="discount_info" var="discount_info" />
		<column name="transmit_info" var="transmit_info" />
		<column name="created_at" var="created_at" />
		<column name="updated_at" var="updated_at" />
		<column name="payment_srl" var="payment_srl" />
		<column name="payment_call" var="payment_call" />
    </columns>
	<conditions>
       <condition operation="equal" column="purchase_srl" var="purchase_srl" filter="number" notnull="notnull" />
	</conditions>
</query>
<filter name="delete_cart" module="shopxe" act="procShopxeDeleteCart" confirm_msg_code="confirm_delete">
    <form>
        <node target="cart_srls" required="true" />
    </form>
    <parameter>
        <param name="cart_srls" target="cart_srls" />
    </parameter>
    <response callback_func="completeDeleteCart">
        <tag name="error" />
        <tag name="message" />
    </response>
</filter>

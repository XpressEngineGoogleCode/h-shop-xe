<filter name="update_image" module="product" act="procProductUpdateImage" confirm_msg_code="confirm_update">
    <form>
        <param name="document_srl" target="document_srl" />
        <param name="image_srl" target="image_srl" />
        <param name="file_path" target="file_path" />
        <param name="at_index" target="at_index" />
    </form>
    <response callback_func="completeUpdateProductImage">
        <tag name="error" />
        <tag name="message" />
        <tag name="mid" />
        <tag name="document_srl" />
    </response>
</filter>

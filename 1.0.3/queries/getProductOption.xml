<query id="getProductOption" action="select">
	<tables>
		<table name="product_option" >
		</table>
	</tables>
	<columns>
		<column name="*" />
	</columns>
	<conditions>
		<condition operation="like" column="document_srl" var="document_srl" filter="number" />
	</conditions>
	<navigation>
		<index var="sort_index" default="option_name" order="asc" />
	</navigation>
</query>

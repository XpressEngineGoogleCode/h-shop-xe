<query id="getSettlementInfo" action="select">
    <tables>
        <table name="payment_settlement" />
    </tables>
    <columns>
        <column name="payment_settlement.*" />
    </columns>
    <conditions>
        <condition operation="equal" column="payment_settlement.order_srl" var="order_srl" />
    </conditions>
</query>
